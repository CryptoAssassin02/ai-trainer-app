{
  "name": "trainer-backend",
  "version": "1.0.0",
  "description": "Backend for trAIner AI fitness application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:integration": "NODE_ENV=test jest --config backend/jest.integration.config.js --runInBand",
    "migrate": "node ./scripts/runMigrations.js",
    "supabase:start": "cd backend && npx supabase start",
    "supabase:stop": "cd backend && npx supabase stop",
    "db:reset:local": "cd backend && npx supabase db reset --local",
    "docker:build": "docker compose build backend",
    "docker:up": "docker compose up backend",
    "docker:down": "docker compose down",
    "docker:test": "docker compose build --no-cache --progress=plain --target test backend && docker compose run --rm backend echo 'Tests completed in build stage.' || echo 'Tests failed in build stage.'",
    "docker:test:run": "docker compose run --rm backend npm run test",
    "docker:logs": "docker compose logs -f backend",
    "docker:exec": "docker compose exec backend sh"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.7",
    "ajv": "^8.17.1",
    "async-mutex": "^0.5.0",
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.18.3",
    "express-rate-limit": "^7.5.0",
    "fast-csv": "^5.0.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "joi": "^17.12.2",
    "JSONStream": "^1.3.5",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.28.4",
    "papaparse": "^5.5.2",
    "pdfkit": "^0.17.0",
    "pg": "^8.14.1",
    "puppeteer": "^24.7.2",
    "redis": "^4.7.0",
    "sanitize-html": "^2.16.0",
    "uuid": "^9.0.1",
    "winston": "^3.12.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "babel-jest": "^29.7.0",
    "bcryptjs": "^3.0.2",
    "jest": "^29.7.0",
    "nock": "^14.0.5",
    "nodemon": "^3.1.0",
    "rewire": "^7.0.0",
    "supertest": "^6.3.4"
  }
}
