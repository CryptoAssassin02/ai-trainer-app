# Environment variables
NODE_ENV=development
PORT=8000

# Supabase
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Optional: Override the database connection string
# Format for pooled connections (recommended):
# DATABASE_URL=postgresql://postgres.[PROJECT_REF]:[PASSWORD]@[REGION].pooler.supabase.com:6543/postgres
# 
# Example:
# DATABASE_URL=postgresql://postgres.abcdef:your-service-role-key@aws-0-us-east-1.pooler.supabase.com:6543/postgres

# Auth
JWT_SECRET=your-jwt-secret-at-least-32-characters
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# External services
OPENAI_API_KEY=your-openai-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key

# CORS
CORS_ORIGIN=* 